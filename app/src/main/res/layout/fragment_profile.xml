<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/profileRoot"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorBackground"
	android:padding="16dp">

	<!-- Top AppBar (simple) -->
	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbarProfile"
		android:layout_width="0dp"
		android:layout_height="56dp"
		android:background="@android:color/transparent"
		android:elevation="0dp"
		app:title="@string/profile"
		app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<!-- Profile Card -->
	<com.google.android.material.card.MaterialCardView
		android:id="@+id/cardProfile"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:cardCornerRadius="16dp"
		app:cardElevation="6dp"
		android:layout_marginTop="12dp"
		app:layout_constraintTop_toBottomOf="@id/toolbarProfile"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:padding="16dp">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="12dp">

			<!-- Avatar -->
			<ImageView
				android:id="@+id/imageAvatar"
				android:layout_width="88dp"
				android:layout_height="88dp"
				android:contentDescription="@string/user_avatar_desc"
				android:scaleType="centerCrop"
				android:src="@drawable/avatar"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				android:background="@drawable/avater_bg"
				android:padding="2dp"/>

			<!-- Edit avatar button (small) -->
			<ImageButton
				android:id="@+id/buttonEditAvatar"
				android:layout_width="36dp"
				android:layout_height="36dp"
				android:layout_marginStart="-8dp"
				android:layout_marginTop="56dp"
				android:backgroundTint="@android:color/transparent"
				android:contentDescription="@string/edit_avatar_desc"
				android:src="@drawable/baseline_person_24"
				app:layout_constraintStart_toEndOf="@id/imageAvatar"
				app:layout_constraintTop_toTopOf="@id/imageAvatar"/>

			<!-- Name -->
			<TextView
				android:id="@+id/profileName"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/guest_user"
				android:textSize="18sp"
				android:textStyle="bold"
				android:maxLines="1"
				app:layout_constraintStart_toEndOf="@id/imageAvatar"
				app:layout_constraintTop_toTopOf="@id/imageAvatar"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginStart="12dp"/>

			<!-- Email -->
			<TextView
				android:id="@+id/profileEmail"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/email_example"
				android:textSize="14sp"
				android:alpha="0.75"
				android:maxLines="1"
				app:layout_constraintStart_toStartOf="@id/profileName"
				app:layout_constraintTop_toBottomOf="@id/profileName"
				app:layout_constraintEnd_toEndOf="@id/profileName"
				android:layout_marginTop="6dp"/>

			<!-- small stats / quick info -->
			<LinearLayout
				android:id="@+id/rowStats"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="12dp"
				app:layout_constraintTop_toBottomOf="@id/imageAvatar"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent">

				<TextView
					android:id="@+id/tvBalance"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/wallet_balance"
					android:textStyle="bold"
					android:textSize="14sp"/>

				<!-- Account level label (mapped from numeric codes) -->
				<TextView
					android:id="@+id/tvAccountLevel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:text="@string/profile_account_level"
					android:textStyle="bold"
					android:textSize="14sp"/>
			</LinearLayout>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</com.google.android.material.card.MaterialCardView>

	<!-- Actions (Edit / Settings / Logout) -->
	<LinearLayout
		android:id="@+id/actionsRow"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center"
		android:layout_marginTop="18dp"
		app:layout_constraintTop_toBottomOf="@id/cardProfile"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent">

		<com.google.android.material.button.MaterialButton
			android:id="@+id/buttonEditProfile"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="0dp"
			android:layout_height="48dp"
			android:layout_marginEnd="8dp"
			android:layout_weight="1"
			android:text="@string/edit_profile"/>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/buttonSettings"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="0dp"
			android:layout_height="48dp"
			android:layout_marginStart="8dp"
			android:layout_weight="1"
			android:text="@string/settings"/>
	</LinearLayout>

	<!-- Logout (prominent) -->
	<com.google.android.material.button.MaterialButton
		android:id="@+id/buttonLogout"
		android:layout_width="0dp"
		android:layout_height="56dp"
		android:text="@string/logout"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@id/actionsRow"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		app:cornerRadius="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
