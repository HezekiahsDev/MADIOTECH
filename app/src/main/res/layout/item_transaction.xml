<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTransaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/activity_bg1"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Icon / avatar -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#f0f0f0"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivTxIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/btn_transaction_history"
                android:contentDescription="transaction icon"/>
        </FrameLayout>

        <!-- Description / Date -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvTxTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Purchase - MTN"
                android:textSize="15sp"
                android:textColor="#3B608C"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvTxSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ref: ABC123 · Nov 10, 2025"
                android:textSize="12sp"
                android:textColor="#756c60"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Amount -->
        <TextView
            android:id="@+id/tvTxAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-₦450.00"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#d32f2f"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
