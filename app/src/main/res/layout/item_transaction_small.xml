<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/ivTxIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="tx icon"
        android:padding="6dp"
        android:src="@drawable/btn_transaction_history" />

    <!-- Texts -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/tvTxTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MTN SME 5GB"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvTxSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Mar · Ref# 12345"
            android:textSize="12sp"
            android:textColor="#757575"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Amount -->
    <TextView
        android:id="@+id/tvTxAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+₦1,200"
        android:textStyle="bold"
        android:textSize="14sp" />
</LinearLayout>