<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8EEEC"
    tools:context=".NotificationFragment">

    <!-- Main vertical container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">



        <TextView
                android:id="@+id/tvNotificationsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorPrimaryVariant" />



        <TextView
            android:id="@+id/tvNotificationsHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Recent updates and alerts"
            android:textSize="14sp"
            android:textColor="@color/colorOnBackground" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorSurface" />

        <!-- Empty state (centered) - reuse existing id tvNotificationsEmpty so code keeps working -->
        <LinearLayout
            android:id="@+id/emptyStateContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="@string/no_notifications_icon_desc"
                app:tint="@color/colorPrimaryVariant"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/tvNotificationsEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/notifications_empty_text"
                android:textSize="16sp"
                android:textColor="@color/colorOnBackground"
                android:gravity="center" />

            <Button
                android:id="@+id/btnRefreshNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/refresh"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- RecyclerView for dynamic notifications (hidden by default) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNotifications"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <!-- Fallback static notice cards (preserve existing TextView ids so runtime code keeps working) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fillViewport="true"
            android:importantForAccessibility="no">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Notice 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/tvNotice1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnBackground"
                        android:visibility="gone"
                        android:text="@string/notice_example_1"
                        tools:text="Notice example 1: App update available" />

                </androidx.cardview.widget.CardView>

                <!-- Notice 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/tvNotice2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnBackground"
                        android:visibility="gone"
                        android:text="@string/notice_example_2"
                        tools:text="Notice example 2: Maintenance scheduled" />

                </androidx.cardview.widget.CardView>

                <!-- Notice 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/tvNotice3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnBackground"
                        android:visibility="gone"
                        android:text="@string/notice_example_3"
                        tools:text="Notice example 3: New feature released" />

                </androidx.cardview.widget.CardView>

                <!-- Notice 4 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/tvNotice4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnBackground"
                        android:visibility="gone"
                        android:text="@string/notice_example_4"
                        tools:text="Notice example 4: Security notice" />

                </androidx.cardview.widget.CardView>

                <!-- Notice 5 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tvNotice5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnBackground"
                        android:visibility="gone"
                        android:text="@string/notice_example_5"
                        tools:text="Notice example 5: Reminder" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>