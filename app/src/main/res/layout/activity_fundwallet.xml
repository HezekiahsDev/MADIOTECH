<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fundRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg1"
    android:paddingTop="8dp"
    tools:context=".FundwalletActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- Page title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Fund wallet"
                android:textColor="#23385B"
                android:textSize="32sp"
                android:textStyle="bold" />

            <!-- Subtitle / note -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Instant Deposit Â· fee: NGN 50.00"
                android:textColor="#4B5563"
                android:textSize="13sp" />

            <!-- Row of bank cards container -->
            <LinearLayout
                android:id="@+id/bankCardsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <!-- Bank card 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBank1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/ivBankIcon1"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/btn_wallet"
                                android:contentDescription="bank icon"
                                app:tint="#C77710" />

                            <TextView
                                android:id="@+id/tvBankName1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="GTBank"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#23385B" />

                            <!-- Copy button -->
                            <ImageButton
                                android:id="@+id/btnCopy1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/btn_transaction_history"
                                android:contentDescription="Copy account number"
                                app:tint="#6B7280"
                                android:padding="8dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvAccountName1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="OLUSHOLA HEZEKIAH W"
                            android:textSize="12sp"
                            android:textColor="#475569" />

                        <TextView
                            android:id="@+id/tvAccountNumber1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0210837651"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Bank card 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBank2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/ivBankIcon2"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/btn_fund_wallet"
                                android:contentDescription="bank icon"
                                app:tint="#C77710" />

                            <TextView
                                android:id="@+id/tvBankName2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="FCMB"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#23385B" />

                            <ImageButton
                                android:id="@+id/btnCopy2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/btn_transaction_history"
                                android:contentDescription="Copy account number"
                                app:tint="#6B7280"
                                android:padding="8dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvAccountName2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="OLUSHOLA HEZEKIAH W"
                            android:textSize="12sp"
                            android:textColor="#475569" />

                        <TextView
                            android:id="@+id/tvAccountNumber2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0210837651"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Primary CTA -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFundViaBank"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="Fund via bank"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="12dp"
                app:iconGravity="textStart"
                app:icon="@drawable/btn_wallet"
                app:iconPadding="8dp"
                app:strokeWidth="0dp"
                app:backgroundTint="#23385B"
                android:textColor="@android:color/white" />

            <!-- Secondary action: copy all or use transfer note -->
            <TextView
                android:id="@+id/tvHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tip: Use the account number as the transfer account. Add your mobile number as narration."
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp" />

            <!-- Resolve issues / support link -->
            <TextView
                android:id="@+id/tvResolve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Resolve payment issues"
                android:textAlignment="center"
                android:textColor="#23385B"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
