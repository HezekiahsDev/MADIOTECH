<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fundRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg1"
    android:paddingTop="8dp"
    tools:context=".FundwalletActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="32dp">

            <!-- Page title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Fund wallet"
                android:textColor="#23385B"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Subtitle / note -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Instant Deposit Â· fee: NGN 50.00"
                android:textColor="#4B5563"
                android:textSize="13sp" />

            <!-- Redesigned card stack: vertical, roomy, minimalist -->
            <LinearLayout
                android:id="@+id/bankCardsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <!-- Bank card 1 (full width, subtle elevation) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBank1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/ivBankIcon1"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/btn_wallet"
                                android:contentDescription="bank icon"
                                app:tint="#C77710" />

                            <TextView
                                android:id="@+id/tvBankName1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:text="Palmpay"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#23385B" />

                            <!-- Copy button -->
                            <ImageButton
                                android:id="@+id/btnCopy1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_copy"
                                android:contentDescription="Copy account number"
                                app:tint="#6B7280"
                                android:padding="8dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvAccountName1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="OLUSHOLA HEZEKIAH W"
                            android:textSize="12sp"
                            android:textColor="#475569" />

                        <TextView
                            android:id="@+id/tvAccountNumber1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0210837651"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Bank card 2 (mirrors card 1) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBank2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/ivBankIcon2"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/btn_fund_wallet"
                                android:contentDescription="bank icon"
                                app:tint="#C77710" />

                            <TextView
                                android:id="@+id/tvBankName2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:text="9PaymentSB"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#23385B" />

                            <ImageButton
                                android:id="@+id/btnCopy2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_copy"
                                android:contentDescription="Copy account number"
                                app:tint="#6B7280"
                                android:padding="8dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvAccountName2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="OLUSHOLA HEZEKIAH W"
                            android:textSize="12sp"
                            android:textColor="#475569" />

                        <TextView
                            android:id="@+id/tvAccountNumber2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0210837651"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Primary CTA: slightly taller, full width, roomy padding -->


            <!-- Secondary action: subtle layout, increased line-height for readability -->
            <TextView
                android:id="@+id/tvHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tip: Use the account number as the transfer account. Add your mobile number as narration."
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"
                android:textColor="#6B7280"
                android:layout_marginTop="12dp" />

            <!-- Resolve issues / support link: centered and spaced -->
            <TextView
                android:id="@+id/tvResolve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Resolve payment issues"
                android:textAlignment="center"
                android:textColor="#23385B"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
