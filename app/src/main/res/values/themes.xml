<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.MADIOTECH" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorSecondary">@color/accent_gold</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/colorOnBackground</item>
        <item name="android:textColorSecondary">@color/colorOnSurface</item>

        <!-- Status Bar and Navigation Bar -->
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/primary_blue</item>

        <!-- Button and widget styles -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
    </style>

    <!-- Theme alias for easy switching -->
    <style name="Theme.MADIOTECH" parent="Base.Theme.MADIOTECH" />
</resources>
